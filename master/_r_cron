#!/bin/bash

docker run -d --name r2d2-master-cron \
  -v /srv/r2d2-master/master.conf:/opt/master/master.conf:ro \
  -v /srv/r2d2-master/r2d2-master-cert.pem:/opt/master/r2d2-master-cert.pem:ro \
  -v /srv/r2d2-master/r2d2-master-key.pem:/opt/master/r2d2-master-key.pem:ro \
  -e TZ=Asia/Yekaterinburg \
  uralm1/r2d2-master sh -c "script/check_db_hosts && script/master cron"
